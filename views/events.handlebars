<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>CMS - Express</title>
  <!-- Latest compiled and minified CSS & JS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootswatch/4.0.0/flatly/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css" media="screen" title="no title">
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<body>
  <div id="header_wrapper">
    <div id="header">
      <li id="sitename"><a href="#">&lt;CodeBook/&gt;</CodeBook></a></li>
      <form class="form-inline">
        <div class="form-control mr-sm-2">
          <a class="btn btn-default" data-toggle="modal" data-target="#edit-modal" href="/blog">Profiles</a>
        </div>
        <div class="form-control mr-sm-2">
          <a type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" href="/authors"> Add
            Event</a>
        </div>
      </form>
    </div>
  </div>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="event-container">
          <h1>Upcoming Events</h1>
        </div>
      </div>
    </div>
    <br>
    {{#each Event}}
    <div class="card text-center">
      <div class="card-header">
        {{this.eventName}}
      </div>
      <div class="card-body">
        <h5 class="card-title">{{this.location}}</h5>
        <p class="card-text">{{this.start_date}}</p>      
        <p class="card-text">{{this.start_at}} - {{this.end_at}}</p>
      </div>
    </div>
    {{/each}}
    </d>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add Event</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="event-create">
              <div class="form-group row">
                <label for="inputTitle" class="col-sm-3 col-form-label">Title</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" id="event-title" placeholder="Team Meeting">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputStart" class="col-sm-3 col-form-label">Event Date</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" id="event-start-date" placeholder="2019-01-01">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputStart" class="col-sm-3 col-form-label">Event Description</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" id="event-description" placeholder="Tell me more..">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputStart" class="col-sm-3 col-form-label">Start Time</label>
                <div class="col-sm-9">
                  <input type="time" class="form-control" id="event-start-time">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputEnd" class="col-sm-3 col-form-label">End Time</label>
                <div class="col-sm-9">
                  <input type="time" class="form-control" id="event-end-time">
                </div>
              </div>
              <div class="form-group row">
                <label for="navEnd" class="col-sm-3 col-form-label">Event Location</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="event-location" placeholder="1234 Main St. Los Angeles, CA 90210">
                </div>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="eventSubmit" type="button" href="/event" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Custom Script -->
    {{!-- <script src="js/events.js" type="text/javascript"></script> --}}
    <script src="js/eventForm.js" type="text/javascript"></script>

</body>

</html>